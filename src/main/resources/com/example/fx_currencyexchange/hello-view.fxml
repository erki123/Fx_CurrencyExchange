<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.fx_currencyexchange.HelloController">
  <TextField fx:id="amountField" promptText="Amount" onKeyTyped="#onAmountInputChanged"/>
  <ComboBox fx:id="currencyFrom" promptText="From Currency"/>
  <ComboBox fx:id="currencyTo" promptText="To Currency"/>
  <Button text="Convert" onAction="#handleConvert"/>
  <Label fx:id="resultLabel"/>
</VBox>

